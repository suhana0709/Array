#longest odd/even subarray
def sort(a):
    if not a:
        return 0
    max_len = 1
    curr_len = 1
    for i in range (1, len(a)):
        if (a[i] % 2) != (a[i-1] % 2):
            curr_len += 1
            max_len = max(curr_len, max_len)
        else:
            curr_len = 1
    return max_len
    
a = [2, 4, 1, 3, 6, 7, 5]
print(a)
print(sort(a))
