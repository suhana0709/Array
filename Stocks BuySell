def calc_profits(arr, arr_size):
    profit = 0
    for i in range(1, arr_size):
        if arr[i] > arr[i-1]:
            profit += arr[i] - arr[i-1]
    return profit
#prices for 7 days
prices = [200, 340, 700, 230, 500, 450, 680]
print("Prices for 7 days (in $): ",prices)
print("Profit = $",calc_profits(prices, len(prices)))
