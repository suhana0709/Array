def kadane(a):
    n = len(a)
    max_so_far = 0
    max_ending_here = 0
    for i in range(0, n):
        max_ending_here = max_ending_here + a[i]
        if (max_ending_here < 0):
            max_ending_here = 0
        if (max_so_far < max_ending_here):
            max_so_far = max_ending_here
    return max_so_far
def maxcircularsum(a):
    n = len(a)
    #apply kadane algo. if no circular is needed
    max_kadane = kadane(a)
    #find sum of all element and invert them
    max_wrap = 0
    for i in range (0, n):
        max_wrap += a[i]
        a[i] = -a[i]
    #apply kadane algo to find the minimum inverted subarray
    max_wrap =  max_wrap + kadane(a)
    #the maximum circular sum will be a miximum of two sums
    if max_wrap > max_kadane:
        return max_wrap
a = [11,10,-20,89,-98, 87, 6, -4, 3, 1, 6]
print("Maximum Circualar Sum: ",maxcircularsum(a))
